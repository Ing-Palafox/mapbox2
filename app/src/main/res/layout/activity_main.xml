<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Mapa -->
    <com.mapbox.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <!-- Botón para obtener ubicación -->
    <Button
        android:id="@+id/getLocationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Obtener Ubicación" />

    <!-- Texto para mostrar la ubicación -->
    <TextView
        android:id="@+id/locationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Latitud: , Longitud: "
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <!-- Entrada para coordenadas -->
    <EditText
        android:id="@+id/coordinatesInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa coordenadas (Lat, Long)"
        android:inputType="text" />

    <!-- Entrada para nombre del lugar -->
    <EditText
        android:id="@+id/placeInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa nombre del lugar"
        android:inputType="text" />

    <!-- Botón para buscar lugar -->
    <Button
        android:id="@+id/searchLocationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar Lugar" />

</LinearLayout>
